<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../components/head") %>
    
    <title>Edit article</title>
</head>
<body>
    <div class="container">
        <h1>Edit article</h1>
        <h2 class="text-muted"><%= article.title %></h2>

        <form action="/articles/edit/<%= article._id %>?_method=PUT" class="edit-form" method="POST">
            <div class="form-group">
                <input 
                    id="title"
                    type="text" 
                    class="form-control" 
                    placeholder="Title" 
                    name="title"
                >
            </div>
    
            <div class="form-group">
                <textarea 
                    id="description"
                    maxlength="100" 
                    class="form-control" 
                    placeholder="Description (max: 100 chars)" 
                    name="description" 
                    ></textarea>
            </div>
    
            <div class="form-group">
                <textarea 
                    id="contentMarkdown"
                    maxlength="1000" 
                    class="form-control" 
                    placeholder="Markdown (max: 1000 chars...)" 
                    name="contentMarkdown" 
                    ></textarea>
            </div>

            <div class="row">
                <div class="col mx-5">
                    <a href="/articles">
                        <div type="" class="btn btn-secondary col" value="Cancel">
                            Cancel
                        </div>
                    </a>
                </div>
                
                <div class="col mx-5">
                    <input type="submit" class="btn btn-success col" value="Edit" />
                </div>
            </div>
        </form>
    </div>

    <script>
        let titleInput = document.getElementById("title");
        let descriptionInput = document.getElementById("description");
        let contentInput = document.getElementById("contentMarkdown");
 
        titleInput.value = "<%= article.title %>";
        descriptionInput.value = "<%= article.description %>";
        contentInput.value =  "<%= article.contentMarkdown %>";
        
    </script>
</body>
</html>