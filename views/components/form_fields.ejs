<div class="form-group">
    <span class="text-danger">*</span>
    <input 
        id="title"
        type="text" 
        class="form-control" 
        placeholder="Title" 
        name="title"
        required 
    >
</div>

<div class="form-group">
    <span class="text-danger">*</span>
    <textarea 
        id="description"
        maxlength="100" 
        class="form-control" 
        placeholder="Description (max: 100 chars)" 
        name="description" 
        required ></textarea>
</div>

<div class="form-group">
    <span class="text-danger">*</span>
    <textarea 
        id="contentMarkdown"
        maxlength="1000" 
        class="form-control" 
        placeholder="Markdown (max: 1000 chars...)" 
        name="contentMarkdown" 
        required ></textarea>
</div>

<div class="row">
    
    <div class="col text-center">
        <a href="/articles">
            <input type="none" class="btn btn-secondary col-12 col-md-8" value="Cancel">
        </a>
    </div>
   
    
    <div class="col text-center">
        <input type="submit" class="btn btn-success col-12 col-md-8" value="Add" />
    </div>
</div>